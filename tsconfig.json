{
    "compilerOptions": {
      "experimentalDecorators": true,
      "module": "commonjs",
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "outDir": "build",
      "sourceMap": true,
      "strict": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "target": "ES2020",
      "moduleResolution": "node"
    },
    "compileOnSave": true,
    "typeRoots": [
      "./node_module/@types",
      "./src/utils/types"
],
  }